.swiper-box {
  width: 100%;
  height: 100%;
  position: relative;
}
.swiper {
  height: 100%;
  width: 100%;
}

.swiper image {
  height: 100%;
  width: 100%;
}
.swiper-box .prev {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}
.swiper-box .prev image {
  width: 100%;
  height: 100%;
}
.swiper-box .next {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
}
.swiper-box .next image {
  width: 100%;
  height: 100%;
}
.item-button {
  position: absolute;
  left: 50%;
  bottom: 10%;
  transform: translateX(-50%);
}
