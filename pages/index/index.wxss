.footer {
  font-size: 26rpx;
  color: #a757a8;
  border-top: 1px solid #ccc;
  width: 50%;
  margin: 0 auto;
  margin-top: 70rpx;
  text-align: center;
  position: relative;
}

.footer >text {
  width: 260rpx;
  position: absolute;
  top: -18rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #f8f6f7;
}
