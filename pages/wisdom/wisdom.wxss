.wisdom_banner {
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  background-position: top center;
}

.wisdom_item {
  margin: 0rpx;
  padding: 0;
  text-align: left;
  width: 100%;
  margin-top: 20rpx;
  height: 260rpx;
  background: -webkit-gradient(linear, 55% 100%, 55% 0%, from(#f1f1f1), to(#fff));
  display: flex;
  flex-direction: row;
  flex-basis: auto;
  box-sizing: border-box;
  background-color: transparent;
}

.wisdom_item::after {
  border: none;
  background-color: transparent;
}

.wisdom_item .img_aside {
  width: 140rpx;
  height: 140rpx;
  border: 6rpx solid #b467b5;
  border-radius: 50%;
  box-sizing: border-box;
  margin: 50rpx;
}

.wisdom_item .item_main {
  flex: 1;
  flex-basis: auto;
  padding-top: 80rpx;
  padding-left: 30rpx;
}

.wisdom_item .item_main  text {
  display: block;
  line-height: 36rpx;
}

.wisdom_item .item_main  text:nth-of-type(1) {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.wisdom_item .item_main  text:nth-of-type(2) {
  font-size: 24rpx;
  color: #858585;
}

.wisdom_item .img_aside.font_img {
  padding: 22rpx;
}
