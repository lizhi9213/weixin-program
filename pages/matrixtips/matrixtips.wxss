/* pages/main/index.wxss */

.tips {
  width: 100%;
}

.tips .tips_title {
  width: 100%;
  height: 64rpx;
  border-bottom: 1rpx solid #ccc;
  background: -webkit-gradient(linear, 55% 100%, 55% 0%, from(#f1f1f1), to(#fff));
  overflow: hidden;
}

.tips .tips_title >text {
  display: inline-block;
  width: 100%;
  font-size: 32rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #b467b5;
  margin-left: 20rpx;
}

.tips .tips_content {
  background-color: #fff;
  padding-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.tips .tips_content >text {
  display: block;
  text-align: left;
  font-size: 28rpx;
  line-height: 42rpx;
}

.container-box {
  background-color: #efeff4;
  height: 100vh;
}

.img-box {
  padding: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
}

.img-box image {
  width: 686rpx;
  height: 686rpx;
  background-color: #f9f9f9;
}

.input-row {
  margin: 30rpx auto;
  border-bottom: 1rpx solid #e5e5e5;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #fff;
  font-size: 34rpx;
  color: #000;
}

.input-row input {
  margin-left: 100rpx;
  flex: 1;
}

.mybtn {
  width: 686rpx;
  margin: 60rpx auto;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.canvas-box {
  position: fixed;
  top: 999999rpx;
  left: 0;
}
